package banco;

public class Funcionario {
	private String nome;
	private String cpf;
	protected double salario;
	
	Funcionario() {
		//Construtor
	}
	
	public void setNome(String nome) {
		this.nome = nome;
	}
	
	public void setSalario(double salario) {
		this.salario = salario;
	}
	
	public double getBonificacao() {
		return this.salario * 0.10;
	}
}
